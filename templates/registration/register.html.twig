{% extends 'base.html.twig' %}

{% block title %}M'inscrire{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">M'inscrire</h1>
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
                {{ form_start(registrationForm) }}
                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.email, 'Email:') }}
                        {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>
                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.plainPassword, 'Mot de passe:') }}
                        {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.agreeTerms) }}
                        {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'form-check-input' } }) }}
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                    <button type="submit" class="btn btn-primary w-100">M'inscrire</button>
                {{ form_end(registrationForm) }}
                <p>Déjà inscrit(e) ? <a href="{{ path('app_login') }}">Me connecter</a></p>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Hello CommerceController!{% endblock %}

{% block body %}

{% include 'partials/header.html.twig' %}

<!-- MAIN IMG -->

<div class="mainimg">
    <img src="assets/img/imgcommerce.jpg" alt="imgaccueil">
    <p>Les commerces</p>
</div>

<!-- COMMERCES -->

<div class="container my-4">
    <div class="row align-items-center mb-4">
    {% for commerce in commerces %}
        <div class="col-lg-7">
            <img class="imgacti img-fluid" src="{{ asset('assets/img/' ~ commerce.image) }}" alt="imgplaneau">
        </div>
        <div class="col-lg-5">
            <div class="text-center">
                <h2>{{ commerce.title }}</h2>
                <p>{{ commerce.description }}</p>
                <a class="btn btn-primary" href="https://www.remiremont.fr/sport/plan-deau/" target="_blank">Voir le lieu</a>
            </div>
        </div>
    {% endfor %}
    </div>
</div>

{% include 'partials/footer.html.twig' %}

{% endblock %}
